@model IEnumerable<ContractMonthlyClaimSystem.Models.Lecturer>

@{
	ViewData["Title"] = "Lecturers";
}
<div class="container">
	<h2>Add Lecturer</h2>
	<form asp-controller="Lecturer" asp-action="Create" method="post">
		<div class="form-group mb-3">
			<label class="form-label">Lecturer Name</label>
			<input type="text" name="LecturerName" />
		</div>
		<div class="form-group mb-3">
			<label class="form-label">Topic</label>
			<input type="text" name="Topic" />
		</div>
		<div class="form-group mb-3">
			<label class="form-label">Date</label>
			<input type="date" class="form-control" required />
		</div>

		<div class="form-group mb-3">
			<label class="form-label">Description</label>
			<textarea name="Description" class="form-control" rows="4" placeholder="Description" required></textarea>
		</div>

		<button type="submit" class="btn btn-primary w-100">Save</button>
	</form>
</div>