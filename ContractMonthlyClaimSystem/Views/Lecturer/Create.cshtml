@model IEnumerable<ContractMonthlyClaimSystem.Models.Lecturer>

@{
    ViewData["Title"] = "Lecturers";
}


<div class="container">
    <h2>Add Lecturer</h2>
    <form asp-controller="Lecturer" asp-action="Create" method="post">
        <label>Lecturer Name</label>
        <input type="text" name="LecturerName" />

        <label>Topic</label>
        <input type="text" name="Topic" />

        <label>Date</label>
        <input type="date" name="Date" />

        <label>Description</label>
        <textarea name="Description"></textarea>

        <button type="submit">Save</button>
    </form>
</div>