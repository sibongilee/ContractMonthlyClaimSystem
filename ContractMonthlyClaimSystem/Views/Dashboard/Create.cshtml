@model ContractMonthlyClaimSystem.Models.Lecturer
@{
    ViewData["Title"] = "Add Lecturer";
}
<div class="container mt-5">
    <div class="card shadow-lg p-4 rounded-4">
        <h2 class="text-center text-success mb-4">Add Lecturer</h2>

        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label class="form-label">Lecturer Name</label>
                <input asp-for="LecturerName" class="form-control rounded-pill" />
            </div>
            <div class="mb-3">
                <label class="form-label">Topic</label>
                <input asp-for="Topic" class="form-control rounded-pill" />
            </div>
            <div class="mb-3">
                <label class="form-label">Date</label>
                <input asp-for="Date" type="date" class="form-control rounded-pill" />
            </div>
            <div class="mb-3">
                <label class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control rounded-4"></textarea>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary rounded-pill px-4">Back</a>
                <button type="submit" class="btn btn-success rounded-pill px-4">Save</button>
            </div>
        </form>
    </div>
</div>
