<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - ContractMonthlyClaimSystem</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/ContractMonthlyClaimSystem.styles.css" asp-append-version="true" />
</head>
<body class="bg-dark text-light">
	<nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
		<div class="container">
			<a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">ContractMonthlyClaimSystem</a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarNav">
				<ul class="navbar-nav me-auto">
					<li class="nav-item">
						<a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacy</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" asp-controller="Home" asp-action="About">About</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" asp-controller="Lecturer" asp-action="Index">Lecturer Panel</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
					</li>
				</ul>
				<ul class="navbar-nav ms-auto">
					@if (TempData["User_Name"] != null)
					{
						<li class="nav-item">
							<span class="navbar-text text-white me-3">
								@TempData["User_Name"] 
								(@TempData["User_Role"])
							</span>
						</li>
						<li class="nav-item">
							<a class="btn btn-outline-light" asp-controller="Account" asp-action="Logout">Logout</a>
						</li>
					}
				</ul>
			</div>
		</div>
	</nav>

	<div class="container my-4">
		@RenderBody()
	</div>
	<footer class="bg-dark text-center text-white py-3 mt-auto">
		<div class="container">
			<p class="mb-0">&copy; 2025 - ContractMonthlyClaimSystem. All rights reserved.</p>
		</div>
	</footer>

</body>
</html>
