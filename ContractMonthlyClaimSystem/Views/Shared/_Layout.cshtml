<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - ContractMonthlyClaimSystem</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/ContractMonthlyClaimSystem.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="navbar">
        <div>
            <a asp-controller="Home" asp-action="Index">Home</a>
            <a asp-controller="Home" asp-action="Privacy">Privacy</a>
            <a asp-controller="Lecturer" asp-action="Index">Lecturer Panel</a>
            <a asp-controller="Dashboard" asp-action="Index">Dashboard</a>
        </div>

        <ul class="navbar-nav ms-auto">
            @if (TempData["Username"] != null)
            {
                <li class="nav-item">
                    <span class="navbar-text text-white me-3">
                        @TempData["Username"] (@TempData["UserRole"])
                    </span>
                </li>
                <li class="nav-item">
                    <a class="btn btn-outline-light" asp-controller="Account" asp-action="Logout">Logout</a>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a class="btn btn-outline-light" asp-controller="Account" asp-action="Login">Login</a>
                </li>
                <li class="nav-item">
                    <a class="btn btn-outline-light" asp-controller="Account" asp-action="Registration">Register</a>
                </li>
            }
        </ul>
    </div>

		
	<div class="container my-4">
		@RenderBody()
	</div>
	
</body>
</html>
