@model IEnumerable<ContractMonthlyClaimSystem.Models.Claim>

@{
    ViewData["Title"] = "View Claims";
}

<style>
    body {
        background-color: black;
        color: white;
        font-family: Arial, sans-serif;
    }

    .container {
        background-color: dimgray;
        padding: 30px;
        border-radius: 10px;
        width: 600px;
        margin: 100px auto;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 10px;
        border-bottom: 1px solid white;
        text-align: left;
    }

    th {
        background-color: forestgreen;
        color: white;
    }

    tr:hover {
        background-color: gray;
    }
</style>

<div class="container">
    <h2>All Claims</h2>
    <table class="table-bordered mt-4">
        <thead class="table-dark">
            <tr>
                <th>Claim ID</th>
                <th>Description</th>
                <th>Lecturer Name</th>
                <th>Status</th>
                <th>Date Submitted</th>
                <th>Document</th>
                <th>Submitted By (User ID)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model)
            {
                <tr>
                    <td>@claim.claimId</td>
                    <td>@claim.claimDescription</td>
                    <td>@claim.LecturerName</td>
                    <td>@claim.Status</td>
                    <td>@claim.claimDate.ToShortDateString()</td>
                    <td>@claim.Documents</td>
                    <td>@claim.UserId</td>
                </tr>
            }
        </tbody>


    </table>
</div>

