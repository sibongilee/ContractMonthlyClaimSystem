@model List<ContractMonthlyClaimSystem.Models.Claim>
@{
    ViewData["Title"] = "Verify Claim";
}
<div class="container">
    <div class="card p-4 shadow" style="width:500px;">
        <h2 class="text-center mb-4">Verify Claims</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Claim ID</th>
                    <th>Claim Type</th>
                    <th>Lecturer Name</th>
                    <th>Hours</th>
                    <th>Rate</th>
                    <th>Total</th>
                    <th>Notes</th>
                    <th>Description</th>
                    <th>Status</th>
                    <th>Date Submitted</th>
                    <th>Documents</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in Model)
                {
                    <tr>
                        <td>@claim.claimId</td>
                        <td>@claim.claimType</td>
                        <td>@claim.LecturerName</td>
                        <td>@claim.claimDescription</td>
                        <td>@claim.HoursWorked</td>
                        <td>@claim.HourlyRate</td>
                        <td>@claim.TotalAmount</td>
                        <td>@claim.Notes</td>
                        <td>@claim.Status</td>
                        <td>@claim.claimDate.ToShortDateString()</td>
                        <td>
                            <!-- Add document display logic here if needed -->
                        </td>
                        <td>
                            <a asp-action="ApproveClaim" asp-route-id="@claim.claimId" class="btn btn-success btn-sm">Approve</a>
							<a asp-action="RejectClaim" asp-route-id="@claim.claimId" class="btn btn-danger btn-sm">Reject</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>